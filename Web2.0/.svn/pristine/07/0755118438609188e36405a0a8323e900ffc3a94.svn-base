@border: solid #404040 2px;
@border-thin: solid #404040 1px;
.buttonholder {
	text-align: left;
}
.button {
	background-color: white;
	color: #404040;
	width: 100%;
	text-align: left;
	border: none;
	border-top: @border;
	border-left: @border;
	border-right: @border-thin;
	border-bottom: none;
	font-size: 20px;
}
.button:focus {
	outline: 0;
}
.top {
	border-top-left-radius: 7px;
}
.bottom {
	border-bottom-left-radius: 7px;
	border-bottom: @border;
}
.graph {
	border-top: @border;
	border-bottom: @border;
	border-right: @border;
	border-left: none;
}
.buttonIcon {
	height: 50px;
	width: 50px;
	vertical-align: middle;
}